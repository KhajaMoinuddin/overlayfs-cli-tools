#!/bin/perl

use FindBin;
use lib "$FindBin::Bin";
use overlayfs;

$working_dir = $ARGV[0];
$layer_tag = $ARGV[1];
$layer_tag =~ s/[\s]/_/g;

$layers_dir=($ENV{'LAYERS_DIR'})?($ENV{'LAYERS_DIR'}):("/root/layers");
if(! -d $layers_dir)
{
        mkdir("$layers_dir") or die("failed to mkdir $layers_dir :: $!\n");
}

die("working_dir is mandatory param\n") if (! $working_dir);

bring_layer_to_front($working_dir,$layer_tag);
